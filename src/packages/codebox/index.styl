.md-codebox-wrapper
  --md-codebox-font-size: 50px
  --md-codebox-width: 66px
  --md-codebox-height: 70px
  --md-codebox-gutter: 18px
  --md-codebox-border-width: 2px
  --md-codebox-border-color: var(--md-color-border-element)
  --md-codebox-border-active-color: var(--md-color-text-base)
  --md-codebox-color: var(--md-color-text-base)
  --md-codebox-blink-color: var(--md-color-text-base)
  --md-codebox-dot-color: var(--md-color-text-base)
  --md-codebox-holder-space: var(--md-h-gap-sm)
  --md-codebox-disabled-color: var(--md-color-text-disabled)