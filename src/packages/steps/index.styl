.md-steps
  --md-steps-color: var(--md-color-border-base)
  --md-steps-color-active: var(--md-color-primary)
  --md-steps-border-size: 1px
  --md-steps-icon-size: 32px // icon size
  --md-steps-text-color: var(--md-color-text-body)
  --md-steps-text-font-size: var(--md-font-body-large)
  --md-steps-text-gap-horizontal: 20px
  --md-steps-text-gap-vertical: 40px
  --md-steps-desc-color: var(--md-color-text-caption)
  --md-steps-desc-font-size: var(--md-font-body-normal)
  --md-steps-transition-delay: .15s