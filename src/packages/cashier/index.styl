.md-cashier
  --md-cashier-bg: var(--md-color-bg-inverse)
  --md-cashier-choose-title-font-size: var(--md-font-body-large) // 支付标题
  --md-cashier-choose-title-color: var(--md-color-text-minor)
  --md-cashier-choose-amount-font-size: 80px // 支付金额
  --md-cashier-choose-amount-color: var(--md-color-text-base)
  --md-cashier-choose-describe-font-size: var(--md-font-minor-normal) // 支付描述
  --md-cashier-choose-describe-color: var(--md-color-text-minor)
  --md-cashier-choose-channel-title-font-size: 30px // 支付渠道标题
  --md-cashier-choose-channel-title-color: var(--md-color-text-body)
  --md-cashier-choose-channel-title-action-font-size: var(--md-font-body-large) // 支付渠道动作标题
  --md-cashier-choose-channel-title-action-color: var(--md-color-primary)
  --md-cashier-choose-channel-desc-font-size: var(--md-font-minor-large) // 支付渠道备注
  --md-cashier-choose-channel-desc-color: var(--md-color-text-caption)
  --md-cashier-choose-channel-icon-color: var(--md-color-primary)
  --md-cashier-choose-more-font-size: var(--md-font-minor-large) // 更多支付方式
  --md-cashier-choose-more-color: var(--md-color-text-minor)